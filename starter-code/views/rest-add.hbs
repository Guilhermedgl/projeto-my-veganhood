<div class="restForm">
  <h1>Indique um Restaurante</h1>

  <form id="form">

    <div class="form-group row">
      <input type="text" class="form-control" placeholder="Nome">
    </div>

    <div class="form-group row">
      <input type="text" class="form-control" id="inputAddress" placeholder="Endereço">
    </div>

    <div class="form-group row">
      <input type="text" class="form-control" id="inputZip" placeholder="CEP">
    </div>

    <div class="form-group row">
      <input type="text" class="form-control" id="inputCity" placeholder="São Paulo - SP" disabled>
    </div>

    <div class="form-group row">
      <input type="number" class="form-control" placeholder="Telefone">
    </div>

    <div class="form-group row">
      <input type="email" class="form-control" id="inputEmail3" placeholder="Email">
    </div>

    <div class="form-group row">
      <select id="inputState" class="form-control">
        <option selected>Tipo de Restaurante...</option>
        <option>Vegan</option>
        <option>Veggie</option>
        <option>Ambos</option>
      </select>
    </div>

  </form>

  <button type="submit" class="btn btn-primary">Add</button>

</div>

